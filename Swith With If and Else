package pkgswitch;
 import java.util.Scanner;
  public class SwithWithIf {
    public static void main (String [] args){
        Scanner leitor = new Scanner (System.in);
       int temp;
       String tip;
        System.out.print("Digite o tipo do conteÃºdo a ser transportado: ");
        tip = leitor.nextLine();
        System.out.print("Digite a temperatura: ");
        temp = leitor.nextInt();
        switch(tip){
            case "A":
            case "a":
                if (temp >= 10 && temp <=17){
                    System.out.println("Liberado para transporte!");
                }else{
                    System.out.println("Reprovado para o transporte!");
                }break;
            case "B":
            case "b":
                if (temp >= 11 && temp <=16){
                    System.out.println("Liberado para transporte!");
                }else{
                    System.out.println("Reprovado para o transporte!");
                }break;
            case "C":
            case "c":
                if(temp >= 12 && temp <=15){
                    System.out.println("Liberado para transporte!");
                }else{
                    System.out.println("Reprovado para o transporte!");
                }break;
            case "D":
            case "d":
                if(temp >= 13 && 14 <=14){
                    System.out.println("Liberado para transporte!");
                }else{
                    System.out.println("Reprovado para o transporte!");
                }
        }
    }
}
