package pkgswitch;
 import java.util.Scanner;
  public class VogalOuConsoante {
    public static void main (String [] args){
        Scanner leitor = new Scanner(System.in);
        String letra;
        System.out.println("Digite uma letra para saber se Ã© vogal ou consoante: ");
        letra = leitor.next();
        switch(letra){
            case "A":
            case "a":
                System.out.println("letra vogal");
                break;
            case"E":
            case"e":
                System.out.println("letra vogal");
                break;
            case"I":
            case"i":
                System.out.println("letra vogal");
                break;
            case"O":
            case"o":
                System.out.println("letra vogal");
                break;
            case"U":
            case"u":
                System.out.println("letra vogal");
                break;
            default:
                System.out.println("letra consoante!!!");
        }
    }
    
}
